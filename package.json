{
  "name": "parse-gitignore",
  "description": "Parse a .gitignore or .npmignore file into an array of patterns.",
  "version": "1.0.1",
  "homepage": "https://github.com/jonschlinkert/parse-gitignore",
  "author": "Jon Schlinkert (https://github.com/jonschlinkert)",
  "contributors": [
    "Jon Schlinkert (http://twitter.com/jonschlinkert)",
    "Michael Mayer (http://schnittstabil.de)"
  ],
  "repository": "jonschlinkert/parse-gitignore",
  "bugs": {
    "url": "https://github.com/jonschlinkert/parse-gitignore/issues"
  },
  "license": "MIT",
  "files": [
    "index.js"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "test": "mocha"
  },
  "devDependencies": {
    "gulp-format-md": "^1.0.0",
    "mocha": "^5.2.0"
  },
  "keywords": [
    "gitignore",
    "ignore",
    "parse"
  ],
  "verb": {
    "toc": false,
    "layout": "default",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "related": {
      "list": [
        "parse-author",
        "parse-git-config",
        "parse-github-url"
      ]
    },
    "lint": {
      "reflinks": true
    }
  }
}
